<UI xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Script file="arrow.lua" /> 

	<Frame name="CoolLevelUp_ArrowTemplate" virtual="true">
		<Size>
			<AbsDimension x="16" y="16"/>
		</Size>
		<Scripts>
			<OnLoad>
				CoolLevelUp.Arrow.OnLoad(self);
			</OnLoad>
			<OnUpdate>
				CoolLevelUp.Arrow.OnUpdate(self, elapsed);
			</OnUpdate>
		</Scripts>
	</Frame>

	<FontString name="CoolLevelUp_ArrowTextTemplate" inherits="NumberFontNormal" virtual="true">
		<Size>
			<AbsDimension x="32" y="16"/>
		</Size>
	</FontString>
</UI>